@model PessoaViewModel
@{
    ViewData["Title"] = "Currículo";
}

<link rel="stylesheet" href="~/css/Curriculo/curriculo.css" />

<body>
    <br />
    <h1>Currículo - @Model.nome</h1>
    <div class="section">
        <h2>Informações Pessoais</h2>
        <br />
        <ul>
            <li><strong>Nome:</strong> @Model.nome</li>
            <li><strong>CPF:</strong> @Model.cpf</li>
            <li><strong>Endereço:</strong> @Model.endereco</li>
            <li><strong>Telefone:</strong> @Model.telefone</li>
            <li><strong>Email:</strong> @Model.email</li>
            <li><strong>Pretensão salarial:</strong> @Model.pretensao_salarial</li>
            <li><strong>Cargo pretendido:</strong> @Model.cargo_pretendido</li>
        </ul>
    </div>
    @{
        if (Model.formacao_academica != null || Model.formacao_academica.Count == 0)
        {
            <div class="section">
                <h2>Formação Acadêmica</h2>
                @foreach (FormacaoViewModel f in Model.formacao_academica)
                {
                    <br />
                    <p><strong>Instituição: @f.instituicao (Conclusão em @f.data_conclusao.ToString("MM/yyyy"))</strong> </p>
                    <ul>
                        <li><strong>Curso:</strong> @f.curso</li>
                        <li><strong>Situação:</strong> @f.situacao</li>
                    </ul>
                }
            </div>
        }
    }

    @{
        if (Model.experiencia_profissional != null || Model.experiencia_profissional.Count == 0)
        {
            <div class="section">
                <h2>Experiência Profissional</h2>
                @foreach (ExperienciaViewModel e in Model.experiencia_profissional)
                {
                    <br />
                    <p><strong>Empresa: @e.empresa</strong></p>
                    <ul>
                        <li><strong>Cargo:</strong> @e.cargo</li>
                        <li><strong>Período:</strong> @e.data_inicio.ToString("MM/yyyy") até @e.data_fim.ToString("MM/yyyy")</li>
                    </ul>
                }
            </div>
        }
    }

    @{
        if (Model.idioma != null || Model.idioma.Count == 0)
        {
            <div class="section">
                <h2>Idiomas</h2>
                @foreach (IdiomaViewModel i in Model.idioma)
                {
                    <br />
                    <p><strong>Idioma: @i.idioma</strong></p>
                    <ul>
                        <li><strong>Nível:</strong> @i.nivel</li>
                    </ul>
                }
            </div>
        }
    }
    <br />
    <br />
</body>